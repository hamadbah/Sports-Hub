<%- include("../partials/_navbar.ejs") %>
<link rel="stylesheet" href="/stylesheets/style.css"/>  
<div class="container">
  <h1 class="page-title">Here’s All the Clubs</h1>

  <ul class="club-list">
    <% clubs.forEach(club => { %>
      <li class="club-item">
        <span class="club-name"><%= club.clubName %></span>
        <span class="club-owner"> — Owned by: <%= club.owner.username %></span>
        <a href="/clubs/<%= club._id %>" class="club-link">More Details</a>
      </li>
    <% }) %>
  </ul>

  <% if (user && user.role === 'Admin') { %>
    <div class="button-group">
      <a href="/clubs/new" class="add-btn">Add a New Club</a>
    </div>
  <% } %>
</div>
<%- include('../partials/_footer.ejs') %>